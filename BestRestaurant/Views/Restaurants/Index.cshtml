@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Item>;

<h1>Restuarants</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Description}", "Details", new { id = restaurant.ItemId }) | @item.Cuisine.Name</li>
}

<p>@Html.ActionLink("Add new Restaurant", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>